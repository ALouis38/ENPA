{% extends '::base.html.twig' %}

{% block body %}

<div class="container">

    {% include "InnovaLearningPathBundle::Step/left-sidebar.html.twig" %}
    {% include "InnovaLearningPathBundle::Step/right-sidebar.html.twig" %}

    <select name="view-choice">
        <option selected value="Vue concepteur">Vue concepteur</option>
        <option value="Vue enseignant">Vue enseignant</option>
        <option value="Vue tuteur">Vue tuteur</option>
        <option value="Vue Apprenant">Vue Apprenant</option>
    </select>
    <div class="row">
        <div class="span4">
            <div class="row">
                <div class="span1" id="title_test_bob">
                    <h3>Parcours</h3>
                </div>
                <div id="header_test_bob" class="span1">
                        <form action="{{path("redirectpathedit")}}" method="post" accept-charset="utf-8" id="form_test_bob">
                            <select name="path-id" id="">
                                {% for path in paths %}
                                    <option value="{{ path.id }}">{{ path.name }}</option>
                                {% endfor %}
                            </select>
                        <input type="submit">
                    </form>
                </div>
            </div>
            <div class="well">
                <div id="left_tree">
                    {% if htmlTree is defined %}
                        {{ htmlTree|raw }}
                    {% endif %}  
                </div>
            </div>
            <button id="save" class="btn pull-right">Save</button>
        </div>
        <div class="span4">
            <h3>Ressources types</h3>
            <h4>Qui</h4>
            <a href="#" title="" class="btn"><i class="icon-plus"></i>Ajouter</li></a>
            <div class="well otherss">
